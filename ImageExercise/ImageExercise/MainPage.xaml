<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ImageExercise"
             x:Class="ImageExercise.MainPage"
             BackgroundColor="Black">

    <StackLayout Margin="0, 25, 0, 0">
        <StackLayout Orientation="Horizontal" Margin="30, 0, 30, 0">
            <Button x:Name="btnPrevious" Text="Previous" TextColor="White" HorizontalOptions="StartAndExpand" Clicked="Button_OnClicked"/>
            <ActivityIndicator IsRunning="True" HorizontalOptions="CenterAndExpand"/>
            <Button x:Name="btnNext" Text="Next" TextColor="White" HorizontalOptions="EndAndExpand" Clicked="Button_OnClicked2"/>
        </StackLayout>

        <StackLayout Margin="0, 25, 0 , 0">
            <Image x:Name="sampleImage"/>
        </StackLayout>
        
    </StackLayout>

</ContentPage>